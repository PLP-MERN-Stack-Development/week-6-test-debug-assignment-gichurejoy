{
    "name": "mern-testing-root",
    "private": true,
    "workspaces": [
        "client",
        "server"
    ],
    "scripts": {
        "install-all": "npm install --workspaces --include-workspace-root",
        "test": "jest",
        "test:unit": "jest --selectProjects=client,server --testPathPattern=unit",
        "test:integration": "jest --selectProjects=client,server --testPathPattern=integration",
        "test:e2e": "npx cypress run || npx playwright test"
    },
    "devDependencies": {
        "jest": "^29.0.0"
    }
}